<% provide(:title, t("posts.eidt.name_page")) %>
<% provide(:button_name, t("posts.edit.button_save")) %>
<h1><%= t("posts.edit.name_page") %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@post) do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label :catalog_id %>
      <%= f.select "catalog_id", Catalog.all.collect{   |a| [a.name, a.id]}, { prompt: "Select Catalog "}, class: "form-control" %>

      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control" %>

      <%= f.label :content %>
      <%= f.text_field :content, class: "form-control" %>

      <%= f.submit yield(:button_name), class: "btn btn-primary" %>
    <% end %>
    <br>
    <div>
      <%= link_to t(:button_back), catalog_path(@post.catalog.id), class: "btn btn-primary btns" %>
    </div>
  </div>
</div>
