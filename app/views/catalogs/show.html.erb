<% provide :title, t("catalogs.show.name_page") %>

<div class="title-name title-catalog-index">
  <span class="content-name"><%= @catalog.name %></span>
  <% if check_admin_login? %>
    <%= link_to new_catalog_post_path(@catalog.id), class: "btn button-add-post" do %>
      <i class="fa fa-plus" aria-hidden="true"></i>
      <span><%= t("catalogs.show.button_create") %></span>
    <% end %>
  <% end %>
</div>
<br>
<dl>
  <dt>
    <div class="col-xs-6 col-md-4 title-catalog-name">
      <span class="text-center"><%= t "catalogs.index.title_post" %></span>
    </div>
    <div class="col-xs-6 col-md-4 title-catlog-name">
      <span class="text-center"><%= t "catalogs.index.title_author" %></span>
    </div>
    <div class="col-xs-6 col-md-4 title-catalog-name">
      <span class="text-center"><%= t "catalogs.index.title_action" %></span>
    </div>
  </dt>
  <%= render @posts %>
</dl>
<div class="pagination-content">
  <div class="parent-pagination">
    <%= pagy_bootstrap_nav(@pagy).html_safe %>
  </div>
</div>
