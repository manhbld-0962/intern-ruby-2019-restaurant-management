<%= form_for(@discount) do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :number %>
  <%= f.text_field :number, class: "form-control" %>

  <%= f.label :desc %>
  <%= f.text_area :desc, class: "form-control" %>

  <%= f.submit yield(:button_name), class: "btn btn-primary" %>
<% end %>
<br>
<div>
  <%= link_to t(:button_back), discounts_path, class: "btn btn-primary btns" %>
</div>
