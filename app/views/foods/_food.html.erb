<dt class="row" id = "<%= "food-#{food.id}" %>" >
  <span>
    <%= link_to food.name, food, class: "col-8 left" %>
  </span>
  <span class="col-4 right">
    <%= link_to t(:button_edit), edit_food_path(food), class: "btn btn-outline" %>
    <%= link_to t(:button_delete), food, method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: "btn btn-outline" %>
  </span>
</dt>
